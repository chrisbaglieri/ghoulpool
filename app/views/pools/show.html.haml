.span-18.last
  %h2= @pool.name
  %hr
  .span-9
    %h3 Details
    %ul
      %li= "Scoring Function: #{@pool.rule.function}"
      %li= "Pick Count: #{@pool.picks}"
    %h3 Participants
    %ul
      - @pool.users.each do |user|
        %li= user.email
  .span-9.last
    %h3 Actions
    %ul
      %li
        = link_to 'View Your Entries', pool_entries_path(@pool), :class => "small-button"
        = link_to 'Update Pool', edit_pool_path(@pool), :class => "small-button" if can? :update, @pool
        = link_to 'Delete Pool', @pool, :confirm => "Are you sure want to delete this pool?", :method => :delete, :class => "small-button" if can? :destroy, @pool
    %h3 Activity