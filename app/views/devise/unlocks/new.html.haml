= form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post }) do |f|
  = devise_error_messages!
  %p
    = f.label :email
    = f.email_field :email
  %p= f.submit "Resend unlock instructions", :class => "big-button"
= render :partial => "devise/shared/links"
